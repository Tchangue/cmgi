{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/security.css">
{% endblock %}

{%  block body %}
    <div class="container">
        <h2 class="text-center"><b>Inscription</b></h2>
        {{ form_start(form) }}
        {{ form_row(form.username,{'label': 'Nom d\'utilisateur','attr':{'placeholder':"John Doe"}}) }}
        {{ form_row(form.email,{'attr':{'placeholder':"johndoe@gmail.com"}}) }}
        {{ form_row(form.password,{'label': 'Mot de passe','attr':{'placeholder':"Mot de passe"}}) }}
        {{ form_row(form.confirm_password,{'label': 'Confirmez du mot de passe','attr':{'placeholder':"Confirmez le mot de passe"}}) }}
        <button class="btn btn-lg btn-success btn-block" type="submit">Inscription</button>
        {{ form_end(form) }}
        {% include 'security/loginFooter.html.twig' %}
    </div>
{% endblock %}